<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBg"
    tools:context=".A_HomeFragment.Fragments.A_ForYou.ForYou">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer"
            android:layout_width="match_parent"
            android:layout_height="688dp"
            android:layout_below="@+id/sifiTxt">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_15sdp">



                <include layout="@layout/movie_item_row_shimar" />

                <include layout="@layout/movie_item_row_shimar" />

                <include layout="@layout/movie_item_row_shimar" />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_15sdp">



                    <include layout="@layout/movie_item_row_shimar" />

                    <include layout="@layout/movie_item_row_shimar" />

                    <include layout="@layout/movie_item_row_shimar" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_15sdp">



                    <include layout="@layout/movie_item_row_shimar" />

                    <include layout="@layout/movie_item_row_shimar" />

                    <include layout="@layout/movie_item_row_shimar" />
                </LinearLayout>
            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

        <TextView
            android:id="@+id/sifiTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/popular_sifi_movie"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:visibility="gone"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sifiRecycler"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:layout_below="@+id/sifiTxt"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/ThrillerTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sifiRecycler"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/thrillerMovie"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="@dimen/_14sdp" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ThrillerRecycler"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:layout_below="@+id/ThrillerTxt"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/StockMarketMovie_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ThrillerRecycler"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/StockMarketMovie"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:visibility="gone"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/StockMarketRecycler"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:visibility="gone"
            android:layout_below="@+id/StockMarketMovie_Txt"/>

        <TextView
            android:id="@+id/ActionMovie_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/StockMarketRecycler"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/ActionMovie"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:visibility="gone"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ActionMRecycler"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:layout_below="@+id/ActionMovie_Txt"
            android:visibility="gone"/>
    </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>